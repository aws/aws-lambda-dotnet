{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft": "Debug",
            "Microsoft.Hosting.Lifetime": "Debug",
            "Amazon": "Debug",
            "System": "Debug",
            "Amazon.Lambda.RuntimeSupport": "Debug"
        },
        "Console": {
            "LogLevel": {
                "Default": "Debug",
                "Microsoft": "Debug",
                "Microsoft.Hosting.Lifetime": "Debug",
                "Amazon": "Debug",
                "System": "Debug"
            },
            "FormatterName": "simple",
            "FormatterOptions": {
                "SingleLine": false,
                "IncludeScopes": true,
                "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
            }
        }
    },
    "AWS": {
        "Logging": {
            "LogLevel": {
                "Default": "Debug",
                "Amazon": "Debug"
            },
            "LogMetrics": true,
            "LogResponses": true,
            "LogMetricsFormat": "JSON",
            "LogResponsesToConsole": true
        }
    }
}
